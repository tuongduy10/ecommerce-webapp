    <link rel="stylesheet" href="/css/main/global.css" />
    <link rel="stylesheet" href="/css/main/header.css" />
    <link rel="stylesheet" href="/css/main/main.css" />
    <link rel="stylesheet" href="/css/main/footer.css" />
    <link rel="stylesheet" href="/css/main/product-detail.css" />
    <link rel="icon" href="@(Configuration["ImagePath:Favicon"] + config.FaviconPath)" type="image/x-icon">
    <title>@config.WebsiteName</title>
</head>

<body>
    <!-- Header -->
    @await Component.InvokeAsync("Header")

    <main class="main">
        <!-- Main content -->
        @RenderBody()
    </main>

    <!-- Footer -->
    @await Component.InvokeAsync("Footer")

